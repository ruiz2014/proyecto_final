<div class="container ">
    <h3>Detalle del Producto</h3>
    <br>
    <div class="card mx-auto p-4" style="width: 700px;">
        <h5>{{ product.name }}</h5>
        <div class="body-card">
            <div class="img-card">
                <img src="/uploads/{{product.image}}" alt="" class="card-img-top">
            </div>
            <div class="details">
                <h5>Marca : </h5> <span>{{product.marca}}</span>
                <h5>Categoria : </h5> <span>{{product.categoria}}</span>
                <h5>Precio : </h5> <span>{{product.price}}</h5>
                <h5>Stop : </h5> <span>{{product.stop}}</span>
            </div>
        </div>
        <div class="footer-card mt-3">
            <a href="/api">Lista de Productos</a>
        </div>
    </div>
</div>